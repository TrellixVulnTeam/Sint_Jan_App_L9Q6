<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.sintjan_lvo.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SintJanApp</name>
    <description>
		The official Sint-Janscollege App.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Jannick Koppe, Dean Hollender, Mathijs Janssen.
    </author>
    <content src="index.html" />
    <access origin="*" />
	<icon src="www/img/logo.png" />
	<allow-navigation href="*://*.somtoday.nl/*" />
	<allow-navigation href="*://somtoday.nl/*" />
	<allow-navigation href="*://login.microsoftonline.com/*" />
	<allow-navigation href="*://account.activedirectory.windowsazure.com/*" />
	<allow-navigation href="*://sint-janscollege.zportal.nl/*" />
	<allow-navigation href="*://lvo.itslearning.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<splash src="res/screen/android/logo.png" density="land-hdpi" />
		<splash src="res/screen/android/logo.png" density="land-ldpi" />
		<splash src="res/screen/android/logo.png" density="land-mdpi" />
		<splash src="res/screen/android/logo.png" density="land-xhdpi" />
		<splash src="res/screen/android/logo.png" density="land-xxhdpi" />
		<splash src="res/screen/android/logo.png" density="land-xxxhdpi" />

		<splash src="res/screen/android/logo.png" density="port-hdpi" />
		<splash src="res/screen/android/logo.png" density="port-ldpi" />
		<splash src="res/screen/android/logo.png" density="port-mdpi" />
		<splash src="res/screen/android/logo.png" density="port-xhdpi" />
		<splash src="res/screen/android/logo.png" density="port-xxhdpi" />
		<splash src="res/screen/android/logo.png" density="port-xxxhdpi" /> 
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
