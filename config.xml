<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.sint_jan.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <name>Sint-jan App</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />
		<!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
	    <icon background="@color/background" density="ldpi" foreground="res/icon/android/logosintjanldpi.png" />
	    <icon background="@color/background" density="mdpi" foreground="res/icon/android/logosintjanmdpi.png" />
	    <icon background="@color/background" density="hdpi" foreground="res/icon/android/logosintjanhdpi.png" />
	    <icon background="@color/background" density="xhdpi" foreground="res/icon/android/logosintjanxhdpi.png" />
	    <icon background="@color/background" density="xxhdpi" foreground="res/icon/android/logosintjanxxhdpi.png" />
	    <icon background="@color/background" density="xxxhdpi" foreground="res/icon/android/logosintjanxxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
